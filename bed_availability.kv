MDScreen:
    name: "bed_availability"

    BoxLayout:
        orientation: "vertical"
        padding: dp(10)
        spacing: dp(10)

        # Back Arrow and Title on the Same Row
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(40)

            # Back Button (left aligned)
            MDIconButton:
                icon: "arrow-left"
                pos_hint: {"center_y": 0.5}
                on_release: app.switch_to_screen('near_hospitals')

            Widget:
                size_hint_x: None
                width: dp(25)

            MDLabel:
                text: "Hospital Availability"
                font_style: "H5"
                halign: "left"
                pos_hint: {"center_y": 0.5}
                size_hint_y: None
                height: dp(20)

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(10)
            padding: dp(10)
            MDLabel:
                id: hospital_name
                text: "Hospital Name"
                font_style: "H6"
                halign: "center"
            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(10)
                padding: dp(10)
                MDLabel:
                    id: total_beds
                    text: "Total Beds: "
                    font_style: "Body1"
                    halign: "left"

                MDLabel:
                    id: available_beds
                    text: "Available Beds: "
                    font_style: "Body1"
                    halign: "left"

                MDLabel:
                    id: icu_availability
                    text: "ICU Availability: "
                    font_style: "Body1"
                    halign: "left"
        Widget:
            size_hint_x: None
            height: dp(150)

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(50)

            Widget:
                size_hint_x: None
                width: dp(50)

            MDRaisedButton:
                text: "Inform to Hospital"
                size_hint: None, None
                size: dp(250), dp(50)
                pos_hint: {"center_x": 0.3}
                on_release: app.inform_to_hospital()

            Widget:
                size_hint_x: None
                width: dp(10)

            MDRaisedButton:
                text: "Next"
                size_hint: None, None
                size: dp(250), dp(50)
                pos_hint: {"center_x": 0.9}
                on_release:
                    app.get_lat_long()
                    app.switch_to_screen('near_police_stations')
